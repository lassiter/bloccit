<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to topic.name, topic %>
    </h4>
    <small>
      <%= topic.description %>
    </small>
  </div>
</div>

<div class="col-md-4">
  <% if user_is_authorized_for_topics? %>
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  <% end %>
</div>
