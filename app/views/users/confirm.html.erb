<h1>Signup Verification</h1>
<h4>Does this look right?</h4>
<p></p>
   <div class="col-md-8">
    <p>Name: <%= @user.name %></p>
    <p>Email: <%= @user.email %></p>
    <div class="row">
      <div class="col-md-4" style="width: auto">
        <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, {class: 'btn btn-success'} %>
      </div>
      <div class="col-md-4" style="width: auto">
        <%= button_to "No", new_user_path, class: 'btn btn-secondary', :method => :get %>
      </div>
    </div>
   </div>
